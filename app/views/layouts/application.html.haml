%html
  %head
    %title= t(:website_title)

    = stylesheet_link_tag %w{application}, :cache => "all"
    = javascript_include_tag :defaults, :cache => "all"
    = active_scaffold_includes
    = csrf_meta_tag

    = yield :head

  %body{ :class => [request[:controller], "#{request[:controller]}-#{request[:action]}"] }
    #content
      %h1#main-title= link_to(content_tag(:span, "Welcome"), root_path)

      = render :partial => 'layouts/flash', :object => flash

      #right-content
        = yield


 